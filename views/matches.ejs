<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#000000">
    <title>Search: <%= search %></title>
    <link rel="stylesheet" media="screen and (min-device-width: 501px)" href="/styles.css">
    <link rel="stylesheet" media="screen and (min-device-width: 320px) and (max-device-width: 500px)" href="/mobile.css">
    <link rel="shortcut icon" href="/AyeAreEm.png" />
    <link rel="manifest" type="application/manifest+json" href="/manifest.webmanifest" />
    <!-- ios support -->
    <link rel="apple-touch-icon" href="/img/AyeAreEm-96x96.png">
    <meta name="apple-mobile-web-app-status-bar" content="#000000">
    <script defer src="/script.js"></script>
</head>
<body>
    <div class="header">
        <h1 onclick="window.location = '/'">AyeMovies</h1>

        <!-- input for movies and tv shows -->
        <input class="search" list="moviesList" type="text" onkeyup="if (event.key == 'Enter') search(this.value)" placeholder="type, click an option and hit enter..."/>
        
        <datalist id="moviesList">
            <% all.forEach(item => {%>
                <option data-value="<%= item.link%>"><%= item.title%></option>
            <%})%>
        </datalist>
    </div>

    <div id="container" style="margin-top: 85px;">
        <h1>Search results for <%= search %>: </h1>
        <div class="category">
            <% results.forEach(item => { %>
                <% if (item.display == null) {%>
                    <a href="<%= item.link %>"><img src="<%= item.smallImg %>" alt="<%= item.title %>" title="<%= item.title %>"></a>
                <%}%>
            <%})%>
        </div>
    </div>
</body>
</html>