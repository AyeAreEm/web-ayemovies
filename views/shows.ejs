<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/head') %>
    <title><%= title %></title>
</head>
<body>
    <div class="header">
        <h1 onclick="window.location = '/'">AyeMovies</h1>
    </div>

    <img class="preview" src="<%= img %>" alt="<%= title %>">

    <div class="desc">
        <div class="episodeList">
            <% eps.forEach((ep, index) => {%>
                <a class="epsBtn" href="<%= ep %>">Episode <%= index+1 %></a>
            <%})%>
        </div><br>

        <h1 style="text-align: center;"><%= title %></h1><br>
        <h3 style="margin-left: 30px; margin-right: 30px;"><%= desc %></h3>
        <h5>Genre: <%= genre %></h5>
    </div>

    <% if (locals.seasons) {%>
        <div class="desc" style="margin-top: 20px;">
            <h1 style="text-align: center;">Seasons</h1>
            <div class="episodeList">
                <% seasons.forEach((s, index) => {%>
                    <a class="epsBtn" href="<%= s %>">Seasons <%= index+1 %></a>
                <%})%>
            </div>
        </div>
    <%}%>
</body>
</html>